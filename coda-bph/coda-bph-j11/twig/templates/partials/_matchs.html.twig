{% extends '../layout.html.twig' %}
<section id="matchs">
    <h2>LES MATCHS</h2>
    {% for game in data %}
    <div class="match">
        <h3 class="versus">{{ game['name'] }}</h3>
        <h5>{{ game['date'] }}</h5>
        <div class="logo">
            <img class="{{ game['teams']['team1']['win'] }}" src="{{ game['teams']['team1']['logo_url'] }}" alt="{{ game['teams']['team1']['logo_alt'] }}">
            <img class="{{ game['teams']['team2']['win'] }}" src="{{ game['teams']['team2']['logo_url'] }}" alt="{{ game['teams']['team2']['logo_alt'] }}">
        </div>
        <div class="button_match" ><a href="?route=match&id={{ game['id'] }}">DÃ‰TAILS DU MATCH</a></div>
    </div>
    {% endfor %}
</section>